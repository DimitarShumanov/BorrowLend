@model Speedy.Models.ViewModel.ExpenseVM
@{
    ViewData["Title"] = "Create";
}
<form method="post" asp-action="Create">
    <h1>Create new expense</h1>
    <table>
        <thead>
            <tr>
                <th width="30%">Expense Name</th>
                <th width="30%">Amount</th>
                <th width="30%">Expense Type</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td width="30%"><input asp-for="Expense.ExpenseName"/></td>
                <td width="30%"><input asp-for="Expense.Amount"/></td>
                <td width="30%">
                    <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                        <option select>--Select Expense Type--</option>
                    </select>
                </td>
                <div class="form-group row">
                     <div class="col-3 form-control m-1"></div>
                     <button type="submit" class="col-3 btn btn-success m-1">Save</button>
                     <button asp-action="Index" class="col-3 btn btn-danger m-1">Back</button>
                </div>
            </tr>
        </tbody>
    </table>
</form>


