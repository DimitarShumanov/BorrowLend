@model Speedy.Models.ViewModel.ExpenseVM
@{
    ViewData["Title"] = "Update";
}
<h1>Update</h1>
<form method="post" asp-action="Update">
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <label class="col-3 m-1 form-control" asp-for="Expense.ExpenseName"></label>
                <label class="col-3 m-1 form-control" asp-for="Expense.Amount"></label>
            </div>
            <div class="form-group row">
                <input class="col-3 form-control m-1" asp-for="Expense.ExpenseName" />
                <span asp-validation-for="Expense.ExpenseName" class="text-danger"></span>
                <input class="col-3 form-control m-1" asp-for="Expense.Amount" />
                <span asp-validation-for="Expense.Amount" class="text-danger"></span>
                <select asp-for="Expense.ExpenseTypeId" asp-items="@Model.TypeDropDown" class="form-control">
                    <option select>--Select Expense Type--</option>
                </select>
            </div>
            <div class="form-group row">
                <div class="col-3 form-control m-1"></div>
                <button type="submit" class="col-3 btn btn-success m-1">Update</button>
                <button asp-action="Index" class="col-3 btn btn-danger m-1">Back</button>
            </div>
        </div>
    </div>
</form>
